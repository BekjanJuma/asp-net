@model Instagram.Models.IndexViewModel
@{
    ViewBag.Title = Strings.Manage;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>@Strings.Change_account_settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Strings.Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink(Strings.Change_password, "ChangePassword")
            }
            else
            {
                @Html.ActionLink(Strings.Create, "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
