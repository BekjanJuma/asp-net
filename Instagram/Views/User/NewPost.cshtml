@model Instagram.Models.Post
@using Instagram.Resources

@{
    ViewBag.Title = Strings.New_post;
}


<div class="row justify-content-center">
    <div class=" col-8" style="padding-top:2em; padding-bottom: 2em;">
        <div class="card">
            <div class="card-header card-title">
                @Strings.New_post
            </div>
            <div class="card-body">
                @using (Html.BeginForm("NewPost", "User", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" })) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group row">
                        <label for="postImage" class="col-4 col-form-label">@Strings.Upload_photo</label>
                        <div class="col-8">
                            <input class="form-control" type="file" name="postImage" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" required/>
                        </div>
                    </div>


                    <div class="form-group row">

                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-4" })
                        <div class="col-8">
                            @Html.TextAreaFor(model => model.Description, new {@class = "form-control post-txt-area" } )
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="offset-4 col-8">
                            <input type="submit" value="@Strings.Create" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {

}
